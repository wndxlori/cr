<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sur_name %><br />
    <%= f.text_field :sur_name %>
  </div>
  <div class="field">
    <%= f.label :given_name %><br />
    <%= f.text_field :given_name %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </div>
  <div class="field">
	<%= f.label :team_name %><br />
	<%= f.text_field :team_name, :limit => 50, :autocomplete => autocomplete_team_name_players_path %>
  </div>
  <div class="field">
    <%= f.label :team_abbreviation %><br />
    <%= f.text_field :team_abbreviation %>
  </div>
  <div class="field">
    <%= f.label :birth_date %><br />
    <%= f.date_select :birth_date %>
  </div>
  <div class="field">
    <%= f.label :place_of_birth %><br />
    <%= f.text_field :place_of_birth %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
